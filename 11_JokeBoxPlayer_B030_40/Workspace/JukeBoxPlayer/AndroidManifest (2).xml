<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jukeboxplayer"
    android:versionCode="1"
    android:versionName="1.0" >
    <uses-sdk android:minSdkVersion="11" />
        <uses-permission android:name="android.permission.WAKE_LOCK" />
        <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
<uses-permission android:name="android.permission.INTERNET"></uses-permission>
<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>
<uses-permission android:name="android.permission.ACCESS_WIFI_STATE"></uses-permission>
    <application
         android:debuggable="true"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light">:
        <activity
            android:name="com.example.jukeboxplayer.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
       <activity android:name="com.example.jukeboxplayer.MusicPlayerActivity" android:configChanges="orientation|keyboardHidden"
                  android:label="@string/app_name"></activity>
        <activity
            android:name="com.example.jukeboxplayer.Albums" ></activity>
        <activity
            android:name="com.example.jukeboxplayer.Playlists" ></activity>
        <activity
            android:name="com.example.jukeboxplayer.Artists" ></activity>
        <activity
            android:name="com.example.jukeboxplayer.Genre" ></activity>
        <activity
            android:name="com.example.jukeboxplayer.PlayListActivity"
            />
        
        <activity
            android:name="com.example.jukeboxplayer.Pplayer"
            />
        
         <activity
            android:name="com.example.jukeboxplayer.Aplayer"
            />
         
         <activity
            android:name="com.example.jukeboxplayer.YouTube"
            />
    </application>

</manifest>
