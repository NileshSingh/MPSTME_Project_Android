<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialrem_ll1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     
    android:background="#113401"
    >

    <TextView
        android:layout_margin="10dp"
        android:id="@+id/dialrem_tv1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Remeber"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="2"
        android:textSize="30dp"
        android:textColor="#ffff12"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/dialrem_tv2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Question:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/dialrem_tv3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>

    <TextView
        android:layout_margin="10dp"
        android:id="@+id/dialrem_tv4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/dialrem_tv5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Answer:"
            
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/dialrem_tv6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="-"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>

</LinearLayout>
