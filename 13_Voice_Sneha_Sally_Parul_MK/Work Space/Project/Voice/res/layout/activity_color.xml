<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="798dp"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Black"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="20dp" 
        android:id="@+id/black"
        android:background="#000000"
        android:textColor="#ffffff"        />

    <Button
        android:id="@+id/blue"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="Blue"
        android:textSize="20dp" 
        android:textColor="#ffffff" 
         android:background="#4a36d9"
        
       />

    <Button
        android:id="@+id/brown"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Brown"
        android:textSize="20dp"
            android:textColor="#ffffff" 
        android:background="#947635"
         />

<Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Gold"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="20dp" 
        android:id="@+id/gold"
        android:textColor="#ffffff" 
        android:background="#f1cb47"
        />
<Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Green"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="20dp" 
        android:id="@+id/green"
            android:textColor="#ffffff" 
        android:background="#35ad19"
        />
<Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Orange"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="20dp" 
        android:id="@+id/orange"
            android:textColor="#ffffff" 
        android:background="#faba68"
        />
<Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Pink"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="20dp" 
        android:id="@+id/pink"
            android:textColor="#ffffff" 
        android:background="#f69add"
        />
<Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Purple"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="20dp" 
        android:id="@+id/purple"
            android:textColor="#ffffff" 
        android:background="#ca44f1"
        />
<Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Red"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="20dp" 
        android:id="@+id/red"
            android:textColor="#ffffff" 
        android:background="#ed072c"
        />
<Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Silver"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="20dp" 
        android:id="@+id/silver"
            android:textColor="#ffffff" 
        android:background="#bac3c3"
        />
<Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="White"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="20dp" 
        android:id="@+id/white"
            android:textColor="#000000" 
        android:background="#faf4f8"
        />
<Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Yellow"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="20dp" 
        android:id="@+id/yellow"
            android:textColor="#ffffff" 
        android:background="#f7e623"
        />



</LinearLayout>
</ScrollView>