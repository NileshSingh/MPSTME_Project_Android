<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="@drawable/background">

    <Button
        android:id="@+id/picturedict"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:background="@drawable/pictures" 
        android:onClick="swapto12"/>
 

    <Button
        android:id="@+id/videodict"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/videos" 
        android:onClick="swapto13"
        />
         <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.06"
        android:text="What do you choose?"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:width="@dimen/activity_horizontal_margin" 
         />

</LinearLayout>