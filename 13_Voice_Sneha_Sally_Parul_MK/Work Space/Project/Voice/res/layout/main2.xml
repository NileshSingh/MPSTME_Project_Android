<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="@drawable/background">

    <Button
        android:id="@+id/lessons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:background="@drawable/lessons" 
        android:onClick="swapto3"/>
 

    <Button
        android:id="@+id/games"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/games" 
        android:onClick="swapto7"
        />
     <Button
        android:id="@+id/quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/quiz" 
      android:onClick="swapto8"
        />
      <Button
        android:id="@+id/dictionary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dictionary" 
      android:onClick="swapto9"
        />



    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.06"
        android:text="Where do you want to start?"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:width="@dimen/activity_horizontal_margin" 
         />

</LinearLayout>