<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
     android:background="@drawable/background">
    

    <Button
        android:id="@+id/Numbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/numbers" 
        android:onClick="swapto4" />

    <Button
        android:id="@+id/Letters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/letters" 
        android:onClick="swapto5" />

    <Button
        android:id="@+id/Colours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/colours" 
        android:onClick="swapto6"  />

    <TextView
        android:id="@+id/chooselesson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.06"
        android:text="Which lesson do you choose?"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:width="@dimen/activity_horizontal_margin" 
         />

</LinearLayout>