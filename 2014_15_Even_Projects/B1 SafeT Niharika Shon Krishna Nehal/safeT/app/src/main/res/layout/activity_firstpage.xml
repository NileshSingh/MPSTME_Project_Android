<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ff000000"
    android:clickable="true"
    android:gravity="top"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="     safeT"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="60sp"
        android:textAlignment="center"
        android:textColor="#FFFCFF06"
        android:background="#ff0380cc" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="120sp"
        android:text="Send message with location"
        android:id="@+id/smsVIntent"
        android:textColor="#FFFCFF06"
        android:textSize="35sp"
        android:background="#ff0380cc"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/display"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="54sp"
        android:layout_above="@+id/smsVIntent"
        android:layout_alignRight="@+id/smsVIntent"
        android:layout_alignEnd="@+id/smsVIntent" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="120sp"
        android:text="SEND MESSAGE WITHOUT LOCATION"
        android:textSize="35sp"
        android:id="@+id/test"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFCFF06"
        android:background="#ff0380cc"

        android:transitionName="@string/abc_action_mode_done"
        android:translationZ="@dimen/abc_action_bar_default_height_material"
        android:typeface="monospace"

        android:ellipsize="middle" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:text="INSTRUCTION:\n1. OPEN SETTINGS AND FEED IN NUMBERS \n2. IN CASE OF EMERGENCY PRESS ANY OF THE BUTTONS BELOW!!"
        android:id="@+id/textView3"
       android:layout_marginTop="80sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:textSize="20sp"
        android:textColor="#fff6f000"
        />

</RelativeLayout>
