<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.drunktest"
    android:versionCode="1"
    android:versionName="1.0" >

     <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="17" />
     
    <application
        android:name="com.drunktest.Bootstrap"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
 		android:theme="@style/Theme.AppCompat">
        
        <activity 
            android:name="com.drunktest.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            </activity>
       
        <activity
            android:name="com.drunktest.HomeActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.drunktest.Step_1_Activity"
            android:label="@string/app_name" />
        <activity
            android:name="com.drunktest.Step_2_Activity"
            android:label="@string/app_name" />
        <activity
            android:name="com.drunktest.Step_3_Activity"
            android:label="@string/app_name" />
        <activity
            android:name="com.drunktest.Step_4_Activity"
            android:label="@string/app_name" />
        <activity
            android:name="com.drunktest.Step_5_Activity"
            android:label="@string/app_name" />
        <activity
            android:name="com.drunktest.Drunk_Activity"
            android:label="@string/app_name" />
        <activity
            android:name="com.drunktest.Not_Drunk_Activity"
            android:label="@string/app_name" />
    </application>

</manifest>