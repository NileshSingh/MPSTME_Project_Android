<ListView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/toolbar2" 
    android:entries="@array/proflv"
    android:id="@+id/prof_lv"
    android:layout_marginTop="0dp"
    >
    
</ListView>
    
    
</RelativeLayout>

