<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.srija.dietplanner.MainActivity2"
    android:background="#ffa3fff6"
    android:id="@+id/textview">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AGE"
        android:id="@+id/txtvage"
        android:textColor="#ff150305"
        android:textSize="32dp"
        android:layout_marginTop="96dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/btnbmr"
        android:layout_toStartOf="@+id/btnbmr" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="cal intake"
        android:id="@+id/btnbmr"
        android:clickable="true"
        android:textSize="20sp"
        android:layout_marginTop="200dp"

        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:text="TOTAL CALORIE INTAKE:"
        android:id="@+id/txtv2"
        android:textColor="#ff252525"
        android:textSize="20dp"
        android:layout_alignTop="@+id/txtv3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/txtv3"
        android:layout_marginTop="94dp"
        android:textSize="20dp"
        android:layout_below="@+id/btnbmr"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etxtage"
        android:layout_alignTop="@+id/txtvage"
        android:layout_alignRight="@+id/txtv3"
        android:layout_alignEnd="@+id/txtv3" />
    "/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn3"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/txtv3"
        android:layout_alignEnd="@+id/txtv3"
        android:text="NEXT"/>

</RelativeLayout>
