<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#fffffd07"
    android:backgroundTint="#63ffa70a"
    android:clickable="false">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:autoText="false"
        android:text="British Council"
        android:gravity="center"

        android:background="#b4ff3705"
        android:elegantTextHeight="true"
        android:textSize="35dp"
        android:textStyle="bold"
        android:paddingEnd="20dp"
        android:paddingStart="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The British Council is the United Kingdomâ€™s international organisation for educational opportunities and cultural relations. They are on the ground in six continents and over 100 countries bringing international opportunity to life, every day and are currently working towards growing cultural relations in India. An exciting new range of cultural programmes, including arts events, a reader group, performances, debate and webcasts are conducted. The Mumbai centre boasts a collection of over 25,000 print books and 100 audiobooks. In addition, you can also access a vast collection of online resources covering a wealth of subject areas, including 80,000 ebooks. "
        android:id="@+id/textView"
        android:elegantTextHeight="true"
        android:gravity="center"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:textColor="#ff000000"
        android:textSize="18dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
