<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#fffffd07"
    android:backgroundTint="#63ffa70a"
    android:clickable="false">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:autoText="false"
        android:text="Tata Institute of Fundamental Research"
        android:gravity="center"

        android:background="#b4ff3705"
        android:elegantTextHeight="true"
        android:textSize="35dp"
        android:textStyle="bold"
        android:paddingEnd="20dp"
        android:paddingStart="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:elegantTextHeight="true"
        android:gravity="center"
        android:paddingEnd="18dp"
        android:paddingStart="18dp"
        android:textColor="#ff000000"
        android:textSize="18dp"
        android:text="Address : Tata Institute of Fundamental Research Homi Bhabha Road, Mumbai 400 005, India"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Number : + 91-22-2278-2000"
        android:id="@+id/textView2"
        android:textColor="#ff000000"
        android:textIsSelectable="false"
        android:textSize="18dp"
        android:paddingEnd="18dp"
        android:paddingStart="18dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Library Hours:
        Main Library (A- Block)
  Weekdays : 7:45 - 22:00 hrs.
  Saturdays : 9:30 - 22:00 hrs.
  Sundays and Holidays : 9:30 - 18.00 hrs.

        D - Block Library
  Week Days : 9:00 - 18:15 hrs.
  Saturdays : 9:30 - 18:00 hrs.
  Sundays and Holidays : 9:30 - 18:00 hrs. "
        android:id="@+id/textView3"
        android:elegantTextHeight="true"
        android:paddingEnd="18dp"
        android:paddingStart="18dp"
        android:textSize="18dp"
        android:textColor="#ff000000"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

</RelativeLayout>
