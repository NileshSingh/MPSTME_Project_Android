<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background">

    <RelativeLayout
        android:layout_height="850dp"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.shreyalgelani.gmal.Inbox"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:weightSum="1"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView19"
            android:layout_weight="0.12"
            android:layout_below="@+id/imageButton2"
            android:layout_alignParentStart="true"
            android:clickable="true"
            android:onClick="inboxview"
            android:textColor="#fffff9fb"
            android:text="Application 1" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton2"
            android:src="@drawable/comp4"
            android:minHeight="10dp"
            android:layout_marginBottom="-32dp"
            android:layout_marginRight="20dp"
            android:maxHeight="10dp"
            android:onClick="linkform"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:background="#870775a6" />

    </RelativeLayout>
</ScrollView>
