<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context="com.example.shreyalgelani.gmal.form1">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">




    <RadioGroup
        android:id="@+id/rg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/textView17"
        android:layout_alignParentStart="true">

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Casual     "
        android:id="@+id/crbtn"
        android:layout_marginBottom="86dp"
        android:checked="false"
        android:textSize="22dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:enabled="true"
        android:textColor="#fffff9fb" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Sick        "
            android:id="@+id/srbtn"
            android:checked="false"
            android:textSize="22dp"
            android:layout_alignTop="@+id/crbtn"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/crbtn"
            android:textColor="#fffff9fb" />

        <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duty"
        android:id="@+id/drbtn"
        android:checked="false"
        android:textSize="22dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentEnd="true"
            android:textColor="#fffff9fb" />

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To:"
        android:id="@+id/textView14"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/textView15"
        android:layout_alignParentStart="true"
        android:textSize="25dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From:"
        android:id="@+id/textView15"
        android:layout_marginTop="92dp"
        android:textSize="25dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Reason:"
        android:id="@+id/textView16"
        android:layout_below="@+id/textView14"
        android:layout_alignParentStart="true"
        android:layout_marginTop="59dp"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Attach load form"
        android:id="@+id/textView17"
        android:layout_alignTop="@+id/editText15"
        android:layout_alignStart="@+id/rg1"
        android:layout_toStartOf="@+id/editText15" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/button"
        android:width="150dp"
        android:layout_alignBottom="@+id/rg1"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editText12"
        android:layout_alignTop="@+id/textView15"
        android:layout_alignStart="@+id/editText13" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editText13"
        android:layout_alignTop="@+id/textView14"
        android:layout_alignEnd="@+id/rg1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText14"
        android:height="75dp"
        android:layout_alignTop="@+id/textView16"
        android:layout_toEndOf="@+id/textView17" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText15"
        android:width="130dp"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/editText14"
        android:layout_toStartOf="@+id/button6" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="..."
        android:id="@+id/button6"
        android:width="10dp"
        android:layout_alignTop="@+id/editText15"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
</ScrollView>
