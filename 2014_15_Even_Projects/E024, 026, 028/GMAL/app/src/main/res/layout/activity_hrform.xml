
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="800dp" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.shreyalgelani.gmal.HOD">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Name"
            android:id="@+id/textView"
            android:layout_marginTop="42dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textColor="#fffff9fb" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="From"
            android:id="@+id/textView2"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:layout_marginTop="46dp"
            android:textColor="#fffff9fb" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="To"
            android:id="@+id/textView9"
            android:layout_marginTop="42dp"
            android:layout_below="@+id/textView2"
            android:layout_alignParentStart="true"
            android:textColor="#fffff9fb" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Leave Type"
            android:id="@+id/textView10"
            android:layout_below="@+id/textView9"
            android:layout_alignParentStart="true"
            android:layout_marginTop="46dp"
            android:layout_toStartOf="@+id/editText7"
            android:textColor="#fffff9fb" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Reason"
            android:id="@+id/textView11"
            android:layout_marginTop="101dp"
            android:layout_below="@+id/textView10"
            android:layout_alignParentStart="true"
            android:textColor="#fffff9fb" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText4"
            android:width="275dp"
            android:layout_alignTop="@+id/textView"
            android:layout_toEndOf="@+id/textView11"
            android:enabled="false"
            android:focusable="false"
            android:textColor="#fffff9fb" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/editText6"
            android:layout_alignTop="@+id/textView2"
            android:layout_alignEnd="@+id/editText4"
            android:layout_alignStart="@+id/editText4"
            android:enabled="false"
            android:focusable="false"
            android:textColor="#fffff9fb" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/editText7"
            android:layout_alignTop="@+id/textView9"
            android:layout_alignEnd="@+id/editText6"
            android:layout_alignStart="@+id/editText6"
            android:enabled="false"
            android:focusable="false"
            android:textColor="#fffff9fb" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText8"
            android:layout_alignBottom="@+id/textView10"
            android:layout_alignStart="@+id/editText7"
            android:layout_alignEnd="@+id/editText7"
            android:enabled="false"
            android:focusable="false"
            android:textColor="#fffff9fb" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText10"
            android:height="150dp"
            android:layout_below="@+id/textView10"
            android:layout_toEndOf="@+id/textView10"
            android:width="275dp"
            android:enabled="false"
            android:focusable="false"
            android:textColor="#fffff9fb" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Download attachment"
            android:id="@+id/textView12"
            android:layout_below="@+id/editText10"
            android:layout_alignStart="@+id/editText10"
            android:layout_marginTop="47dp"
            android:enabled="true"
            android:clickable="true"
            android:textColorLink="#870934ff"
            android:textColor="#ffff0025" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="accepted by:"
            android:id="@+id/textView21"
            android:layout_marginTop="57dp"
            android:layout_below="@+id/textView12"
            android:layout_alignParentStart="true"
            android:textColor="#fffff9fb" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText11"
            android:layout_alignTop="@+id/textView21"
            android:layout_alignEnd="@+id/editText10"
            android:width="200dp"
            android:editable="false"
            android:enabled="false"
            android:focusable="false"
            android:textColor="#fffff9fb" />

    </RelativeLayout>
</ScrollView>
