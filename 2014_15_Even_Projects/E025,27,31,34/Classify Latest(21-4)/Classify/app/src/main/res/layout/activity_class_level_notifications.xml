<com.iot.classify.FlyOutContainer xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#095578"
        android:orientation="vertical"
        android:id="@+id/Selection">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#095578"
            android:textColor="#FFFFFF"
            android:onClick="gotoclassnotifications"
            android:text="Class Notifications"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#095578"
            android:textColor="#FFFFFF"
            android:onClick="gotoeventnotifications"
            android:text="Event Notifications"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#095578"
            android:textColor="#FFFFFF"
            android:onClick="gotoinstitutenotifications"
            android:text="Institute Notifications"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#095578"
            android:textColor="#FFFFFF"
            android:onClick="gotorequesttab"
            android:text="Tuition Requests"
            />

    </LinearLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="16sp"
        android:paddingRight="16sp"
        android:paddingTop="16sp"
        android:paddingBottom="16sp"
        tools:context="com.iot.classify.signin.upcoming_activity"
        android:background="#ffffffff">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
        </ScrollView>


        <ImageButton
            android:id="@+id/add_button"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@android:drawable/ic_input_add"
            android:tint="@android:color/white"
            android:background="@drawable/oval_ripple"
            android:onClick="addnotification"
            android:layout_marginEnd="50sp"
            android:layout_marginBottom="25sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="25sp" />
    </RelativeLayout>

</com.iot.classify.FlyOutContainer>



