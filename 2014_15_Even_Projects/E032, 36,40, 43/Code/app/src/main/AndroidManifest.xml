<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mihirsaxena.myproject" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".menu"
            android:label="@string/title_activity_menu"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.mihirsaxena.myproject.MainActivity" />
        </activity>
        <activity
            android:name=".color"
            android:label="@string/title_activity_color"
            android:parentActivityName=".menu" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.mihirsaxena.myproject.menu" />
        </activity>
        <activity
            android:name=".Colors"
            android:label="@string/title_activity_colors"
            android:parentActivityName=".color" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.mihirsaxena.myproject.color" />
        </activity>
        <activity
            android:name=".Scorecard"
            android:label="@string/title_activity_scorecard" >
        </activity>
        <activity
            android:name=".MathsWiz"
            android:label="@string/title_activity_maths_wiz"
            android:parentActivityName=".menu" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.mihirsaxena.myproject.menu" />
        </activity>
    </application>

</manifest>
