<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ffff163c">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello Baby!"
        android:id="@+id/QuestionTextView"
        android:background="#ffffbd41"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/AnswerText"
        android:layout_below="@+id/QuestionTextView"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check Answer"
        android:id="@+id/AnswerButton"
        android:background="#ffffb023"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Good Luck!"
        android:id="@+id/AnswerTextView"
        android:background="#ffff9b2f"
        android:textSize="40dp"
        android:layout_below="@+id/AnswerButton"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="72dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Next Question"
        android:id="@+id/QuestionButton"
        android:background="#ffffe82d"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/plus"
        android:layout_below="@+id/QuestionTextView"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/vs"
        android:layout_above="@+id/AnswerButton"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/minus"
        android:layout_alignTop="@+id/AnswerText"
        android:layout_alignEnd="@+id/AnswerText" />
</RelativeLayout>