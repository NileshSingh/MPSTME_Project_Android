<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:paddingLeft="16sp"
    android:paddingRight="16sp"
    android:paddingTop="16sp"
    android:paddingBottom="16sp" tools:context=".maincourse"
    android:background="@drawable/image6">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
       >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="MAIN COURSE"
        android:id="@+id/textView"
        style="@style/Base.TextAppearance.AppCompat.Display2"
        android:textColor="#ffffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold|italic" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHINESE "
        android:id="@+id/button"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="59sp"
        android:background="#ffffc600"
        android:textSize="@dimen/abc_text_size_body_2_material"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INDIAN"
        android:id="@+id/button2"
        android:layout_below="@+id/button"
        android:layout_marginTop="40sp"
        android:background="#ffffc600"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/abc_text_size_body_2_material" />

        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ITALIAN"
        android:id="@+id/button4"
        android:layout_marginTop="44sp"
        android:background="#ffffc600"
        android:textSize="@dimen/abc_text_size_body_2_material"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button2" />

    </RelativeLayout>

   </ScrollView>