<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent" android:paddingLeft="16sp"
    android:paddingRight="16sp"
    android:paddingTop="16sp"
    android:paddingBottom="16sp"
    tools:context="com.example.samarth.zippyfood.pnssh"
    android:background="@drawable/back24">
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <ImageView
        android:layout_width="250sp"
        android:layout_height="150sp"
        android:id="@+id/imageView18"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/psh" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PANEER SHASHLIK"
        android:id="@+id/textView39"
        android:layout_below="@+id/imageView18"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40sp"
        android:textStyle="bold|italic"
        android:textSize="30sp"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cubes of vegetarian cheese grilled in the Tandoor.
        Serves 2
        Time Required 25 Mins "
        android:id="@+id/textView40"
        android:layout_marginTop="67sp"
        android:layout_below="@+id/textView39"
        android:layout_alignRight="@+id/textView39"
        android:layout_alignEnd="@+id/textView39"
        android:textColor="#ffffffff"
        android:textSize="25sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD TO MY ORDER"
        android:id="@+id/button47"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="25sp" />
</RelativeLayout>
</ScrollView>
