<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/mylayout" >

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignRight="@+id/button2"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="34dp"
        android:text="Event Website"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="33dp"
        android:textColor="#ffffff"
        android:text="Google Map URL" />

    <EditText
        android:id="@+id/editText3"
        android:maxLength="50"
        style="@style/editTextClassic"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/editText1"
        android:layout_alignTop="@+id/textView3"
        android:ems="10"
        android:inputType="textCapSentences" />

    <EditText
        android:id="@+id/editText2"
        style="@style/editTextClassic"
        android:maxLength="50"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView4"
        android:ems="10"
        android:hint="http://www.xyz.com"
        android:inputType="textPersonName" >

       
    </EditText>

    <EditText
        android:id="@+id/editText5"
        style="@style/editTextClassic"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignLeft="@+id/editText4"
        android:ems="10"
        android:hint="http://www.xyz.com"
        android:maxLength="100" />

    <EditText
     style="@style/editTextClassic"
        android:id="@+id/editText4"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:maxLength="50"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView5"
        android:inputType="textCapSentences"
        android:ems="10" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/editText5"
        android:layout_alignTop="@+id/textView7" />

    <EditText
        android:id="@+id/editText7"
        android:maxLength="50"
        style="@style/editTextClassic"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/editText6"
        android:ems="10"
        android:enabled="false"
        android:hint="dd/mm/yyyy"
        android:inputType="none" />

    <EditText
        android:id="@+id/editText1"
        android:maxLength="50"
        style="@style/editTextClassic"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:inputType="textCapSentences" >
    </EditText>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_below="@+id/editText2"
        android:text="Location"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/editText6"
        android:maxLength="50"
        style="@style/editTextClassic"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/spinner1"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:enabled="false"
        android:hint="dd/mm/yyyy"
    	android:inputType="none"  />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView6"
        android:layout_below="@+id/editText5"
        android:layout_marginTop="20dp"
        android:enabled="false"
        android:text="Category"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editText7"
        android:layout_alignBottom="@+id/editText7"
        android:layout_alignLeft="@+id/textView8"
        android:text="End Date"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editText1"
        android:layout_marginTop="20dp"
        android:text="College Name"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editText6"
        android:layout_alignBottom="@+id/editText6"
        android:layout_alignParentLeft="true"
        android:editable="false"
        android:text="Start Date"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="25dp"
        android:text="Event Name"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/button3"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/editText7"
        android:layout_alignBottom="@+id/editText7"
        android:layout_alignLeft="@+id/button2"
        android:background="@drawable/cal" />

    <Button
        android:id="@+id/button2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/editText6"
        android:layout_alignBottom="@+id/editText6"
        android:layout_toLeftOf="@+id/editText6"
        android:background="@drawable/cal" />

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:background="@drawable/mybutton"
        android:text="Add Event" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Event Details"
        android:textColor="#ffffff" />

</RelativeLayout>
