<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Newtask"
    android:background="#000000" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="@string/parr"
        android:textColor="#9900CC"
        android:textStyle="bold"
        android:typeface="sans" />

    <EditText
        android:id="@+id/task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/subject"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="New Task" 
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Add Task"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/dt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/subject"
        android:layout_below="@+id/subject"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Date"
        android:inputType="date"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/notes"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_above="@+id/set"
        android:layout_alignLeft="@+id/dt"
        android:layout_marginBottom="17dp"
        android:ems="10"
        android:hint="Task Info"
        android:inputType="textMultiLine" 
        android:textColor="#FFFFFF"/>

    <EditText
        android:id="@+id/dt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/notes"
        android:layout_below="@+id/dt"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Time"
        android:inputType="time" 
        android:textColor="#FFFFFF"/>

    <EditText
        android:id="@+id/subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/task"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Subject" 
        android:textColor="#FFFFFF"/>

</RelativeLayout>
